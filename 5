#include <iostream>
using namespace std;

int secondaryFunction(int n1, int n2) {
    cout << "Вычислить сумму цифр двух чисел" << endl;
    int sum = 0;
    while (n1 > 0) {
        sum += abs(n1) % 10;
        n1 /= 10;
    }
    while (n2 > 0) {
        sum += abs(n2) % 10;
        n2 /= 10;
    }
    return sum;
}


int secondaryFunction(int n1, int n2, int n3) {
    cout << "Найти наибольшее значение из 3х чисел и 25" << endl;
    int max_value = max({ n1, n2, n3 });
    return max(max_value, 25);
}

int mainFunction(int num1, int num2, int num3) {
    vector<int> nonZeroNumbers;

    if (num1 != 0) {
        nonZeroNumbers.push_back(num1);
    }
    if (num2 != 0) {
        nonZeroNumbers.push_back(num2);
    }
    if (num3 != 0) {
        nonZeroNumbers.push_back(num3);
    }

    if (nonZeroNumbers.size() == 2) {
        return secondaryFunction(nonZeroNumbers[0], nonZeroNumbers[1]);
    }
    if (nonZeroNumbers.size() == 3) {
        return secondaryFunction(nonZeroNumbers[0], nonZeroNumbers[1], nonZeroNumbers[2]);
    }
    if (nonZeroNumbers.size() < 2) {
        cout << "Ошибка" << endl;
        return 0;
    }

}
