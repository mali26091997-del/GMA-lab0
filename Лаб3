#include <iostream>
using namespace std;
int main() {

    setlocale(LC_ALL, "Russian");

    // Задание 1

    cout << "Enter N" << endl;
    int n;
    cin >> n;
    int numCnt = 0;
    int minNumCnt = -1;
    int product = 1;
    int min = 0;
    for (n; n > 0; --n) {
        ++numCnt;
        cout << "Enter the " << numCnt << " number" << endl;
        int num;
        cin >> num;
        if (abs(num) % 10 == 3) {
            product = product * num;
            if (num < min) {
                min = num;
                minNumCnt = numCnt;
            }

        }
            
    }
    if (minNumCnt != -1) {
        cout << "Произведение " << product << endl;
        cout << "мин = " << min << endl;
        cout << "номер мин элемента " << minNumCnt << endl;
        cout << "конец" << endl;
    }
    else {
        cout << "Нет подходящих номеров" << endl;
        cout << "Конец" << endl;
    }


    return 0;
}
