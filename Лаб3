#include <iostream>
using namespace std;
int main() {

    setlocale(LC_ALL, "Russian");

    // Задание 1

    cout << "Enter N" << endl;
    int n;
    cin >> n;
    int numCnt = 0;
    int minNumCnt = -1;
    int product = 1;
    int min = 99999999999999;
    for (n; n > 0; --n) {
        ++numCnt;
        cout << "Enter the " << numCnt << " number" << endl;
        int num;
        cin >> num;
        if (abs(num) % 10 == 3) {
            product = product * num;
            if (num < min) {
                min = num;
                minNumCnt = numCnt;
            }

        }
            
    }
    if (minNumCnt != -1) {
        cout << "Произведение " << product << endl;
        cout << "мин = " << min << endl;
        cout << "номер мин элемента " << minNumCnt << endl;
        cout << "конец" << endl;
    }
    else {
        cout << "Нет подходящих номеров" << endl;
        cout << "Конец" << endl;
    }


    return 0;
}


#include <iostream>
using namespace std;
int main() {
    
    // Задание 2

    setlocale(LC_ALL, "Russian");

    cout << "Введите число " << endl;

    short num;
    int sum = 0;
    cin >> num;

    short num1;
    num1 = abs(num);
    if (num1 > 1000) {
    cout << "Ощибка: |x| > 1000" << endl;
    }
    else {
        while (num1 > 0) {
             sum += num1 % 10;
            num1 /= 10;
     }
         cout << "Сумма цифр числа = " << sum << endl;
         cout << "Конец" << endl;
    }

return 0;
}
