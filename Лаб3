#include <iostream>
using namespace std;
int main() {

    setlocale(LC_ALL, "Russian");
    // Задание 1
    cout << "Введите количество чисел последовательности" << endl;
    int n;
    cin >> n;
    int nummin = 0;
    int minNum = -1;
    int pro = 1;
   int min = INT_MAX;
    for (n; n > 0; --n) {
        ++nummin;
        cout << "Введите " << nummin << " число" << endl;
        int num;
        cin >> num;
        if (abs(num) % 10 == 3) {
            pro = pro * num;
            if (num < min) {
                min = num;
                minNum = nummin;
            }
        }    
    }
    if (minNum != -1) {
        cout << "Произведение " << pro << endl;
        cout << "мин = " << min << endl;
        cout << "номер мин элемента " << minNum << endl;
    }
    else {
        cout << "Нет подходящих номеров" << endl;
    }
        return 0;
}


#include <iostream>
using namespace std;
int main() {
    
    // Задание 2

    setlocale(LC_ALL, "Russian");

    cout << "Введите число " << endl;

    short num;
    int sum = 0;
    cin >> num;

    short num1;
    num1 = abs(num);
    if (num1 > 1000) {
    cout << "Ощибка: |x| > 1000" << endl;
    }
    else {
        while (num1 > 0) {
             sum += num1 % 10;
             num1 /= 10;
     }
         cout << "Сумма цифр числа = " << sum << endl;
    }

return 0;
}
