// ConsoleApplication1.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//

#include <iostream>
#include <bitset>

using namespace std;
int main()
	{
		setlocale(LC_ALL, "Russian");
		short A;
		int i;

		cout << "введите число А:";
		cin >> A;

		cout << "введите номер бита i (от 0 до 7) :";
		cin >> i;
		//проверяем корректность i

		if (i < 0 || i>7) {
			cout << "не соответствует критериям";
			return 1;
		}
		// переводим в двоичную систему
		cout << A << " = " << bitset <8>(A) << endl;
		short bit = (A >> i) & 1;
		cout << "Значение " << i << "бита:" << bit << endl;
		cout << (A >> 3) << endl;
		
		   if (i==1) {
			   cout << "1 сдвиг вправо:" << (bitset <8>(A) >> 1) << endl;
			   cout << "2 сдвиг вправо:" << (bitset <8>(A) >> 2) << endl;
			   cout << "3 сдвиг вправо:" << (bitset <8>(A) >> 3) << endl;
		   }
		   else {
			int M;
			cout << "введите число M: ";
			cin >> M;
		  
				if (M > 5) {
				cout << "M больше 5 на " << M-5 << endl;
				 } 
				 else if (M < 5) {
				cout << "M меньше 5 на"  << 5-M << endl;
				 } 
				 else if (M == 5) {
					cout << "M равен 5 " << endl;
				}
		   }

	return 0;
	}

#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");

	int N;
	cout << "Введите число N: ";
	cin >> N;

	if (N < 0 || N>7) {
		cout << "не соответствует критериям";
		return 1;
	}
	else {

		switch (N) {
		case 1: cout << "Понедельник" << endl; break;
		case 2: cout << "Вторник" << endl; break;
		case 3: cout << "Среда" << endl; break;
		case 4: cout << "Четверг" << endl; break;
		case 5: cout << "Пятница" << endl; break;
		case 6: cout << "Суббота" << endl; break;
		case 7: cout << "Воскресенье" << endl; break;
		default: cout << "В неделе только 7 дней" << endl; break;
		}
	}
	return 0;
}
