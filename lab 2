// ConsoleApplication1.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//

#include <iostream>
#include <bitset>

using namespace std;
int main()
	{
		setlocale(LC_ALL, "Russian");
		short A;
		int i;

		cout << "введите число А:";
		cin >> A;

		cout << "введите номер бита i (от 0 до 7) :";
		cin >> i;
		//проверяем корректность i

		if (i < 0 || i>7) {
			cout << "не соответствует критериям";
			return 1;
		}
		// переводим в двоичную систему
		cout << A << " = " << bitset <8>(A) << endl;
		short bit = (A >> i) & 1;
		cout << "Значение " << i << "бита:" << bit << endl;
		cout << (A >> 3) << endl;
		
		   if (i == A) {
			   cout << "1 сдвиг вправо:" << (bitset <8>(A) >> 1) << endl;
			   cout << "2 сдвиг вправо:" << (bitset <8>(A) >> 2) << endl;
			   cout << "3 сдвиг вправо:" << (bitset <8>(A) >> 3) << endl;
		   }
		   else {
			int M;
			cout << "введите число M: ";
			cin >> M;
		  
				if (M > 5) {
				cout << "M больше 5 на " << M-5 << endl;
				 } 
				 else {
				cout << "M меньше 5 на"  << 5-M << endl;
				 } 
		   }
		return 0;

	}
