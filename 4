
#include <iostream>
using namespace std;
int main() {

    setlocale(LC_ALL, "Russian");
    // Задание 1
    int x[5];
    for (int i = 0; i < 5; ++i) {
        cout << "Введите элементы массива" << endl;
        cin >> x[i];
    }

    int sum = 0;
    int cnt2 = 0;

    for (int i = 0; i < 5; ++i) {
        int num = abs(x[i]);
        while (num > 0) {
            sum += num % 10;
            num /= 10;
        }
        if (sum > 25) {
            ++cnt2;
        }
        sum = 0;
    }

    if (cnt2 >= 2) {
        for (int i = 0; i < 4; ++i) {
            for (int j = i + 1; j < 5; ++j) {                  // Упорядочивание массива
                if (x[i] > x[j]) {
                    swap(x[i], x[j]);
                }
            }
        }
    }
    for (int i = 0; i < 5; ++i) {
        cout << x[i] << endl;
    }

        // Задание 2
    int f[3][4];

    for (int j = 0; j < 4; ++j) {
        for (int i = 0; i < 3; ++i) {
            cout << "Введите элементы матрицы" << endl;
            cin >> f[i][j];
        }
    }
    int cnt = 0;
    int cnt1 = -1;
    int numOfM = -1;
    for (int j = 0; j < 4; ++j) {
        for (int i = 0; i < 3; ++i) {
            if (f[i][j] <= 0) {
                ++cnt;
            }
        }
        if ( (cnt > cnt1) and (cnt>0) ) {
            cnt1 = cnt;
            numOfM = j;
        }
        cnt = 0;
    }
    cout << numOfM << endl;

    for (int i = 0; i < 3; ++i) {
        for (int j = 0; j < 4; ++j) {
            cout << f[i][j] << " ";
        }
        cout << endl;
    }
    if(numOfM != -1)
    for (int i = 0; i < 3; ++i) {

        f[i][numOfM] = 100;
    }
    cout << "Итоговая матрица" << endl;

    for (int i = 0; i < 3; ++i) {
        for (int j = 0; j < 4; ++j) {
            cout << f[i][j] << " ";

        }
        cout << endl;
    }

    return 0;
}
